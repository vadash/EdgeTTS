{
  "name": "edge-tts-web",
  "version": "6.0.0",
  "type": "module",
  "description": "Edge TTS Web Application - Text to Speech converter",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "preview": "npx serve dist",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:real": "vitest run --config vitest.real.config.ts",
    "test:real:repeat": "cross-env REPEAT_PROMPT=true vitest run --config vitest.real.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "repomix": "npm run repomix:source && npm run repomix:tests",
    "repomix:source": "npx repomix --include \"**/*.ts,*.md,*.js,package.json\" --ignore \"**/*.test.ts,**/*.spec.ts,**/test/**,**/tests/**,**/vitest*.ts\" --style markdown --output repomix-source.md",
    "repomix:tests": "npx repomix --include \"**/*.test.ts,**/*.spec.ts,**/vitest*.ts,**/*.test.tsx,**/*.spec.tsx\" --style markdown --output repomix-tests.md"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "@preact/signals": "^1.2.2",
    "generic-pool": "^3.9.0",
    "jszip": "^3.10.1",
    "openai": "^6.10.0",
    "p-queue": "^9.0.1",
    "p-retry": "^7.1.1",
    "preact": "^10.19.3",
    "preact-i18n": "^2.4.0-preactx",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@testing-library/preact": "^3.2.4",
    "@types/generic-pool": "^3.1.11",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.19",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "jsdom": "^25.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.18",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
